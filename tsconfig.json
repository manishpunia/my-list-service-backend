{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "typeRoots": ["./node_modules/@types", "./src/types"] 
  },
  "include": ["src/**/*.ts"],  
  "exclude": ["node_modules", "src/tests/**/*.ts"]
}